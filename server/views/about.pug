extends layout

block styles
  link(rel='stylesheet', href='/stylesheets/about.css')
  link(rel='stylesheet', href='/lib/animate.css/animate.min.css')

block currentPageCategory
  -var selected = 'about';
  
block navigationMenu
  li.active= 'About'

block logotext
  | About

block content
  div.container-fluid.about-container
    h1.animated.bounceInDown
        | Big Test Icicles
    br
    div.col-lg-4.col-md-4.col-sm-12.col-xs-12.animated.bounceInLeft
        div.mini-container
            h2
                | Users
            h1
                | #{users}
    div.col-lg-4.col-md-4.col-sm-12.col-xs-12.animated.bounceInUp
        div.mini-container
            h2
                | Threads
            h1
                | #{threads}
    div.col-lg-4.col-md-4.col-sm-12.col-xs-12.animated.bounceInRight
        div.mini-container
            h2
                | Posts
            h1
                | #{posts}
