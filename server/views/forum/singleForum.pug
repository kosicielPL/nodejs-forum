extends ../layout

block styles
  link(rel='stylesheet', href='/stylesheets/forum/forum-single-forum.css')
  link(rel='stylesheet', href='/stylesheets/forum/forum-pagination.css')

block currentPageCategory
  -var selected = 'forums';

block navigationMenu
  li
    a(href='/forums/') Forums
  li.active= forum.name

block logotext
  | #{forum.name}

block content
  div.row.collapse#search-form
    div.container
      form.form-inline.pull-right
        div.input-group
          input(type="text", name="search", placeholder="Search threads").form-control#search
        | &nbsp;
        button(type="submit").btn.btn-default Search
  div.row.thread-controls
    div.col-xs-6.thread-controls-left
      a(href="/forums/" + forum.internalName + "/new-thread").btn.btn-new-thread NEW THREAD
    div.col-xs-6.thread-controls-right
      button(data-toggle="collapse", data-target="#search-form").btn.btn-search-thread
        span.glyphicon.glyphicon-search
  if threads.length <= 0
    div.container.text-center
      h2 This forums contains no threads :'(
      h2 But hey!
      h2 You can be the first one to post here
  
  div.container-fluid
    each thread in threads
      -
        date =  new Date(thread.dateUpdated)
        today = new Date()
        difference = Math.floor(Math.abs(today - date) / (60 * 1000)) //in minutes
        console.log(difference)
        if(difference < 1){
          date = 'just now'
        } else if (difference < 2){
          date = difference + ' minute ago'
        } else if (difference < 60){
          date = difference + ' minutes ago'
        } else if (difference / 60 < 2){
          date = Math.floor(difference / 60) + ' hour ago'
        } else if (difference / 60 < 24){
          date = Math.floor(difference / 60) + ' hours ago'
        } else if (today.getYear() >= date.getYear()){
          date = date.toDateString().slice(0, -5)
        } else {
          date = date.toDateString()
        }
      -
        if (thread.posts){
          posts = thread.posts.length
        } else {
          posts = 0
        }
      - if(thread.content.length > 200) thread.content = thread.content.substring(0,200) + '...';
      a(href="/forums/thread/" + thread._id, title= thread.content).thread-row-container
        div.row.thread-row.grid
          div.col-sm-6
            div.container-fluid
              div.row
                span.thread-row-icon.glyphicon.glyphicon-file
                span.thread-row-title #{thread.title}
              div.row.visible-xs
                div.thread-row-text= thread.content
              div.row.visible-xs
                div
                  span.thread-row-comment
                    span.glyphicon.glyphicon-comment
                    |  #{posts}   &nbsp;&nbsp;&nbsp;
                  span.thread-row-author   Xpload
                  span.thread-row-date.pull-right= date
          div.col-sm-2.hidden-xs.thread-row-author Xpload
          div.col-sm-2.hidden-xs.thread-row-comment
            span.glyphicon.glyphicon-comment
            |   #{posts}
          div.col-sm-2.hidden-xs.thread-row-date= date
